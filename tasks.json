{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Frontend: Type Check",
      "type": "shell",
      "command": "npm",
      "args": ["exec", "tsc", "--", "--noEmit"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": "$tsc",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Frontend: Type Check (Watch)",
      "type": "shell",
      "command": "npm",
      "args": ["exec", "tsc", "--", "--noEmit", "--watch"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Frontend: Lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": "$eslint-stylish",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Frontend: Lint Fix",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint", "--", "--fix"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": "$eslint-stylish",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Frontend: Type Check + Lint",
      "dependsOn": ["Frontend: Type Check", "Frontend: Lint"],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Docker: Up",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "up", "--build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Docker: Down",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "down"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Docker: Logs Backend",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "logs", "-f", "backend"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Docker: Logs Frontend",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "logs", "-f", "frontend"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Docker: Logs All",
      "type": "shell",
      "command": "docker",
      "args": ["compose", "logs", "-f"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
